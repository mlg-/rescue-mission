<!DOCTYPE html>
<html>
<head>
  <title>RescueMission</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="row">
    <% flash.each do |type, message| %>
      <div class="row flash flash-<%= type %>">
        <%= message %>
      </div>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
