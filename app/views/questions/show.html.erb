<h1><%= @question.title %></h1>

<p><%= @body.html_safe %></p>
<%= link_to 'Edit this question', edit_question_path(id: @question.id) %>
<%= link_to "Delete this question", question_path(@question), method: :delete %>

<h2>Answer this Question</h2>

<%= render "answers/new" %>

<h2>Other Answers</h2>
<ul>
  <% unless @answers.nil? %>
    <% @answers.each do |answer| %>
      <li><%= answer.description %></li>
    <% end %>
  <% end %>
</ul>
